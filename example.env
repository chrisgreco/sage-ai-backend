# LiveKit Configuration (Required)
# Get these from your LiveKit Cloud dashboard: https://cloud.livekit.io/
LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# AI Service API Keys (Required)
# OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Perplexity API key from: https://perplexity.ai/
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Deepgram API key from: https://deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Cartesia API key from: https://cartesia.ai/ (Optional - for premium TTS)
CARTESIA_API_KEY=your_cartesia_api_key_here

# Supabase Configuration (Required for Memory System)
# Get these from your Supabase project dashboard: https://supabase.com/dashboard
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Agent Configuration (Optional)
MODERATOR_PERSONA=Aristotle

# Backend Configuration (Optional)
PORT=8000

# Logging (Optional)
LOG_LEVEL=INFO 